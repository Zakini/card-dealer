{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src", "*.d.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
