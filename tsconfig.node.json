{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    ".eslintrc.cjs",
    "*.config.ts",
    "*.config.js",
    "*.config.mjs",
    "packages/*/*.config.ts",
    "packages/*/*.config.js",
    "packages/*/*.config.mjs"
  ]
}
