{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    ".eslintrc.cjs",
    "*.config.ts",
    "*.config.js",
    "packages/*/*.config.ts",
    "packages/*/*.config.js"
  ]
}
